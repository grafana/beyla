# Build the testserver binary
# Docker command must be invoked from the projec root directory
FROM golang:1.21 as builder

ARG TARGETARCH

ENV GOARCH=$TARGETARCH

WORKDIR /src

# Copy the go manifests and source
COPY vendor/ vendor/
COPY test/ test/
COPY go.mod go.mod
COPY go.sum go.sum

# Build
RUN go build -o http2srv ./test/integration/components/gohttp2/server/main.go

# Create final image from minimal + built binary
FROM debian:bookworm-slim

WORKDIR /
COPY --from=builder /src/http2srv .
COPY --from=builder /src/test/integration/components/gohttp2/server/key.pem .
COPY --from=builder /src/test/integration/components/gohttp2/server/cert.pem .
USER 0:0

CMD [ "/http2srv" ]